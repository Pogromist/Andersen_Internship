<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Progress bar fragment"/>

    <Button
        android:id="@+id/btnAddProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Progress Bar"
        android:layout_below="@+id/textViewProgressBar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnAddProgressBar">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>